<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.haitr.login_hbb.RegisterActivity">

    <EditText
        android:id="@+id/edittext_register_username"
        style="@style/RegisterFieldStyle"
        android:hint="@string/edittext_register_username" />

    <EditText
        android:id="@+id/edittext_register_email"
        style="@style/RegisterFieldStyle"
        android:hint="@string/edittext_register_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edittext_register_phonenumber"
        style="@style/RegisterFieldStyle"
        android:hint="@string/edittext_register_phonenumber"
        android:inputType="phone" />

    <EditText
        android:id="@+id/edittext_register_password"
        style="@style/RegisterFieldStyle"
        android:hint="@string/edittext_register_pass"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edittext_register_repeatpassword"
        style="@style/RegisterFieldStyle"
        android:hint="@string/edittext_register_repeatpass"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_register_createaccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_create_account"
        android:layout_marginTop="25dp"/>

</LinearLayout>
